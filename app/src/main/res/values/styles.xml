<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CurrencyCode" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/currency_code_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CurrencyFullName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/currency_full_name_text_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>